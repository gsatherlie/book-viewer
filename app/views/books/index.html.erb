<h1 align='center'>Here be a list of books</h1>

<% if @books %>
<table id="books-table" class="table table-striped table-bordered" cellspacing="0" width="100%">
	<thead>
		<tr>
			<th>Title</th>
			<th>Author</th>
			<th>Year</th>
			<th>ISBN Number</th>
		</tr>
	</thead>
	<tfoot>
		<tr>
			<th>Title</th>
			<th>Author</th>
			<th>Year</th>
			<th>ISBN Number</th>
		</tr>
	</tfoot>
	<tbody>
		<% @books.each do |book| %>
		<tr> 
			<td> <%= book['title']%></td>
			<td> <%= book['author'] %></td>
			<td> <%= book['year'] %></td>
			<td> <%= book['isbn'] %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<% elsif %>
	<h2 align='center'>Looks like there was an error...so no books for you</h2>
<% end %>